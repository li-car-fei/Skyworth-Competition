page{
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper{
  margin-top: 20rpx;
  margin-bottom: 3rpx;
  width: 100%;
  height: 360rpx;
}

.timeLine{
  width: 80%;
  height: 45rpx;
  border-radius: 45rpx;
  padding: 30rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.timeLine__classification{
  position: relative;
}

.-selected {
  color: #445E83 !important;
  font-weight: bold !important;
}

.-selected::after{
  content: "";
  height: 5rpx;
  width: 70rpx;
  display: block;
  position: absolute;
  left: 50%;
  margin-left: -35rpx; 
  /* 让横线居中 */
  bottom: 0;
  background: #4C7DC2;
}

.bottomHint{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}