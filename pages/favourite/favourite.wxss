page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

scroll-view{
  height: 1030rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.state{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 105rpx;
  right: 45rpx;
  height: 60rpx;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  z-index: 999;
  background: white;
}

.-selected {
  color: #445E83 !important;
  font-weight: bold !important;
}

.bottomHint{
  margin-top: 30rpx;
  margin-bottom: 130rpx;
}