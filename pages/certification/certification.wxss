page{
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
}

.container{
  margin-top: 50rpx;
  width: 660rpx;
  /* height: 800rpx; */
  display: flex;
  flex-direction: column;
}

.container__item{
  width: 100%;
  /* height: 200rpx; */
}

.container__item__title{
  height: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  border-bottom: 2rpx #999999 solid;

}

.container__item__title__icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.container__item__title__down{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 50rpx;
}

.container__item__list__item{
  margin: 10rpx 0 20rpx 0;
}

.onTap{
  animation: myRotate 0.5s ease-in-out;
  animation-fill-mode: forwards;
}

@keyframes myRotate{
  0% {transform: rotate(0deg);}
  100% {transform: rotate(180deg);}
}

.container__item__list{

  height:300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  animation: showList 0.5s ease-in-out;
  border-bottom: 2rpx #999999 solid;
}

@keyframes showList{
  0% {height: 0rpx;}
  100% {height: 200rpx;}
}