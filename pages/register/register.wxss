page{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  width: 100%;
  height: 100%;
  padding-top: 200rpx;
}

.container{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 25rpx;
  position: relative;
}

.container__email{
  margin-left: 30rpx;
  padding: 20rpx;
}

.container__getValidNumber{
  background-color: #9cc3f9;
  color: white;
  font-size: 30rpx;
}

.input{
  margin-left: 30rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
  width: 80%;
}

.register{
  margin-top: 25rpx;
  background-color: #9cc3f9;
  color: white;
  font-size: 30rpx;
  width: 90%;
}

.textContainer{
  position: absolute;
  bottom: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}